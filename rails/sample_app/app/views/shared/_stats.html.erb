<% @user ||= current_user %> <!-- @user for 'show' page and 'current_user' for home page -->
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %> <!-- calculate directly in database for efficiency -->
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %> <!-- calculate directly in database for efficiency -->
    </strong>
    followers
  </a>
</div>

