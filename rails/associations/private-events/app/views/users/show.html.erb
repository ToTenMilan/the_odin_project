<h3>User profile page: <%= @user.name if @user %></h3>

<div class="container">
  <p>Created events: </p>
  <table class="table">
    <thead>
      <tr>
        <th>Event name</th>
        <th>Place</th>
        <th>Event Date</th>
        <th>Event Creator</th>
        <th>Attendees</th>
      </tr>
    </thead>
    <tbody>

        <tr><% @created_events.each do |e| %></tr>
          <td><%= e.name %></td>
          <td><%= e.place %></td>
          <td><%= e.date %></td>
          <td><%= e.creator.name %></td>
          <td>
            <% e.attendees.each do |a| %>
              <%= a.name %>,
            <% end %>
          </td>
        <% end %>

    </tbody>
  </table>

  <p>Upcoming events: </p>
    <table class="table">
      <thead>
        <tr>
          <th>Event name</th>
          <th>Place</th>
          <th>Event Date</th>
          <th>Event Creator</th>
          <th>Event Attendees</th>
        </tr>
      </thead>
      <tbody>

          <tr><% @upcoming_events.each do |e| %></tr>
            <td><%= e.name %></td>
            <td><%= e.place %></td>
            <td><%= e.date %></td>
            <td><%= e.creator.name %></td>
            <td>
              <% e.attendees.each do |a| %>
                <%= a.name %>,
              <% end %>
            </td>
          <% end %>

      </tbody>
    </table>

  <p>Previous events: </p>
    <table class="table">
      <thead>
        <tr>
          <th>Event name</th>
          <th>Place</th>
          <th>Event Date</th>
          <th>Event Creator</th>
          <th>Event Attendees</th>
        </tr>
      </thead>
      <tbody>

          <tr><% @previous_events.each do |e| %></tr>
            <td><%= e.name %></td>
            <td><%= e.place %></td>
            <td><%= e.date %></td>
            <td><%= e.creator.name %></td>
            <td>
              <% e.attendees.each do |a| %>
                <%= a.name %>,
              <% end %>
            </td>
          <% end %>

      </tbody>
    </table>

</div>





