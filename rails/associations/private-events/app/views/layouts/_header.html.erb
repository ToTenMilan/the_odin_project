<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "IVENTBRITE", root_url, id: "logo"%>
    <nav>
      <ul class="nav navbar-nav navbar-right">

        <li><%= link_to "All events", events_path %></li>

        <% if current_user? %>
          <li><%= link_to "New event", new_event_path %></li>
          <li><%= link_to "Signed in as #{current_user.name}", user_path(current_user) %></li>
          <li><%= link_to "Sign out", session_path(current_user), method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign in", new_session_path %></li>
          <li><%= link_to "New user", new_user_path %></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>
