<html>
  <head>
    <title>Mastermind in Sinatra</title>
  </head>
  <body>
  <h2>MASTERMIND</h2>

  <form action="/" method="post">
    Your input (hint: in the following format "C C C C"):
    <input type="text" name="input"><br><br>
    <input type="submit" value="submit these pegs">
  </form>

  <form action="/" method='GET'>
    <input type="submit" value="New Game">
  </form>

  <h1><%= goal %></h1>
  <% unless input.nil? %>

  input: <%= input %>
    <div>
      <span>
        <% slots.each do |row| %>
          <table>
            <tr>
              <td><%= row %></td>
            </tr>
          </table>
        <% end %>
      </span>
      <span>
        <% check_slots.each do |row| %>
          <table>
            <tr>
              <td><%= row %></td>
            </tr>
          </table>
        <% end %>
      </span>
    </div>
  <% end %>

  </body>
</html>
